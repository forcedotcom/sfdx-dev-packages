{
  "name": "@salesforce/ts-types",
  "version": "0.15.0",
  "description": "Types and related utilities for TypeScript",
  "main": "lib/index.js",
  "repository": "https://git.soma.salesforce.com/salesforcedx/sfdx-ts-types",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "types": "lib/index.d.ts",
  "files": [
    "docs",
    "lib/**/*.js",
    "!lib/**/*.test.js",
    "lib/**/*.d.ts",
    "!lib/**/*.test.d.ts"
  ],
  "scripts": {
    "build": "yarn compile && yarn lint",
    "clean": "yarn sfdx-clean",
    "clean-all": "yarn sfdx-clean all",
    "compile": "tsc -p tsconfig.json && cp -r src/types lib",
    "docs": "rm -rf docs/* && typedoc --out docs",
    "lint": "tslint -p tsconfig.json -t stylish",
    "prepare": "yarn build && yarn docs",
    "rebuild": "yarn clean-all && yarn install --no-lockfile && yarn build",
    "test": "yarn build && yarn uts -R xunit-file",
    "uts": "nyc mocha --require source-map-support/register --recursive \"lib/**/*.test.js\"",
    "watch": "tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "tslib": "^1"
  },
  "devDependencies": {
    "@salesforce/dev-config": "^1",
    "@salesforce/dev-scripts": "0.0.0",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/sinon": "^4",
    "chai": "^4",
    "husky": "^1",
    "mocha": "^5",
    "nyc": "^13",
    "prettier": "^1",
    "pretty-quick": "^1",
    "sinon": "^5",
    "source-map-support": "^0.5.6",
    "tslint": "^5",
    "typedoc": "^0.12.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "^3",
    "xunit-file": "^1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "lib/**/*.test.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
