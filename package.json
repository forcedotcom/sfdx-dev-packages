{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "clean-all": "lerna run clean-all",
    "compile": "lerna run compile",
    "docs": "lerna run docs",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "postclean-all": "yarn sfdx-clean all",
    "postinstall": "packages/dev-scripts/bin/sfdx-gen-lerna-post.js",
    "preinstall": "packages/dev-scripts/bin/sfdx-gen-lerna-pre.js",
    "test": "lerna run test"
  },
  "devDependencies": {
    "cz-lerna-changelog": "^2",
    "husky": "^1",
    "lerna": "^3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "yarn sfdx-husky-commit-msg",
      "pre-commit": "yarn sfdx-husky-pre-commit",
      "pre-push": "yarn sfdx-husky-pre-push"
    }
  }
}
