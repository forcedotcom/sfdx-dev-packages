{
  "name": "@salesforce/kit",
  "version": "0.9.0",
  "description": "Commonly needed utilities for TypeScript and JavaScript",
  "main": "lib/index.js",
  "repository": "https://git.soma.salesforce.com/salesforcedx/sfdx-kit",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "types": "lib/index.d.ts",
  "files": [
    "docs",
    "lib/**/*.js",
    "!lib/**/*.test.js",
    "lib/**/*.d.ts",
    "!lib/**/*.test.d.ts"
  ],
  "scripts": {
    "build": "yarn compile && yarn lint",
    "clean": "yarn sfdx-clean",
    "clean-all": "yarn sfdx-clean all",
    "compile": "yarn copy-lodash && tsc -p tsconfig.json && cp -r src/nodash/*.d.ts lib/nodash",
    "copy-lodash": "mkdir -p lib/nodash && cp vendor/lodash.min.js lib/nodash/lodash.js",
    "docs": "rm -rf docs/* && typedoc --out docs",
    "lint": "tslint -p tsconfig.json -t stylish",
    "lodash": "./scripts/build-lodash.sh",
    "prepare": "yarn build && yarn docs",
    "rebuild": "yarn clean-all && yarn install --no-lockfile && yarn build",
    "test": "yarn build && yarn uts -R xunit-file",
    "uts": "nyc mocha --require source-map-support/register --recursive \"lib/**/*.test.js\"",
    "watch": "tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "@salesforce/ts-types": "0.15.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@salesforce/dev-config": "^1",
    "@salesforce/dev-scripts": "0.0.0",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/sinon": "^4",
    "chai": "^4",
    "husky": "^1",
    "lodash-cli": "^4",
    "mocha": "^5",
    "nyc": "^13",
    "sinon": "^5",
    "source-map-support": "0.5.6",
    "tslint": "^5",
    "typedoc": "0.12.0",
    "typedoc-plugin-external-module-name": "1.1.3",
    "typescript": "^3",
    "xunit-file": "^1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn sfdx-commit-msg",
      "pre-commit": "yarn docs && git add docs",
      "pre-push": "yarn clean && yarn test"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 80,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "lib/**/*.test.js",
      "lib/nodash/lodash.js"
    ]
  }
}